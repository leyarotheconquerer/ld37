<?xml version="1.0"?>
<element type="Window">
    <attribute name="Horiz Alignment" value="Center" />
    <attribute name="Vert Alignment" value="Center" />
    <attribute name="Size" value="180 200" />
    <attribute name="Layout Mode" value="Vertical" />
    <attribute name="Layout Spacing" value="6" />
    <attribute name="Layout Border" value="6 6 6 6" />
    <element>
        <attribute name="Layout Mode" value="Horizontal" />
        <attribute name="Name" value="TitleBox" />
        <element type="Text" style="TitleText">
            <attribute name="Name" value="Title" />
            <attribute name="Text" value="MAIN MENU" />
            <attribute name="Text Alignment" value="Center" />
        </element>
    </element>
    <element type="Button">
        <attribute name="Name" value="Play" />
        <attribute name="Size" value="140 30" />
        <element type="Text">
            <attribute name="Name" value="Play Text" />
            <attribute name="Text" value="Play" />
            <attribute name="Horiz Alignment" value="Center" />
            <attribute name="Vert Alignment" value="Center" />
        </element>
    </element>
    <element type="Button">
        <attribute name="Name" value="Exit" />
        <attribute name="Size" value="140 30" />
        <element type="Text">
            <attribute name="Name" value="Exit Text" />
            <attribute name="Text" value="Exit" />
            <attribute name="Horiz Alignment" value="Center" />
            <attribute name="Vert Alignment" value="Center" />
        </element>
    </element>
</element>

